extends layouts/main-layout.pug

block styles
	link(rel="stylesheet", href="/css/form.css")

block main
	if products.length > 0
		.grid
			each product in products
				article.card.product-item
					header.card__header
						h1.product__title #{product.title}
					.card__image
						img(src="https://picsum.photos/id/1073/200/200", alt="image from picsum photos")
					.card__content
						h2.product__price $19.99
						p.product_description A very interesting product
					.card__actions
						button Add to Cart
	else 
		h1 No products, come back later