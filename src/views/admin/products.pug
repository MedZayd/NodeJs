extends ../layouts/main-layout.pug

block styles
	link(rel="stylesheet", href="/css/card.css")
	link(rel="stylesheet", href="/css/form.css")

block main
	.grid
		each product in products
			article.card.product-item
				header.card__header
					h1.product__title #{product.title}
				.card__image
					img(src=product.image, alt="image from placeimg.com")
				.card__content
					h2.product__price $#{product.price}
					if product.description.length > 150
						p.product_description #{product.description.substring(0,150)+'...'}
					else 
						p.product_description #{product.description}
				.card__actions
					a.button(href="/admin/edit-product/"+product.id) Edit
					a.button(href="/admin/delete-product/"+product.id, onclick="return confirm('Are you sure?')") Delete
		else 
			h1 No products added !