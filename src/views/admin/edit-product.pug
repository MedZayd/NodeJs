extends ../layouts/main-layout.pug

block styles
	link(rel="stylesheet", href="/css/form.css")

block main 
	- actionUrl = edit ? "/admin/edit-product" : "/admin/add-product"
	form.form(action=actionUrl, method="POST")
		.form-control
			label(for="title") Title
			input(type="text", name="title", id="title", value=edit && product.title)
		.form-control
			label(for="price") Price
			input(type="number", step=0.01, name="price", id="price", value=edit && product.price)
		.form-control
			label(for="image") Image Link
			input(type="text", name="image", id="image", value=edit && product.image)
		.form-control
			label(for="description") Description
			textarea(id="description" name="description", cols="30", rows="5") #{product && product.description}
		if edit
			input(type="hidden", id="id", name="id", value=product.id)
		button(type="submit") #{edit ? 'Update' : 'Add'} product